<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" 
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" 
              crossorigin="anonymous"> 
        <title>(Almost) Duplicates by email</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron"><a href="people" role="button" class="btn btn-info">Return</a></div>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Similar emails</th>
                    </tr>
                </thead>
                <tbody><% @duplicates.each_with_index do |(email, similar_emails), index| %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= email %></td>
                        <td><%= similar_emails.join(', ') %></td>
                    </tr>
                </tbody><% end %>
            </table>
        </div>
    </body>
</html>
